@model Cumulative1.Models.Teacher

@{
    ViewBag.Title = "DeleteConfirm";
}

<div id="containershow">
    <h2>Are you sure you want to delete @Model.TeacherFirstName @Model.TeacherLastName?</h2>
    <p>This action cannot be undone.</p>
    <a class="btn btn-outline-primary me-3" href="/Teacher/Show/@Model.TeacherId">Cancel</a>
    <form method="post" action="/Teacher/Delete/@Model.TeacherId" style="display:inline;">
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
    </form>
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
    <p class="mt-3 text-danger">@ViewBag.Message</p>
    }
</div>
